<%= simple_form_for(@user, html: { multipart: true, class: "form-horizontal" }) do |f| %>
  <%= f.input :email, label: "邮箱" %>
  <%= f.input :username, label: "用户名" %>
  <div class="line line-dashed b-b line-lg pull-in"></div>
  <% if not @user.avatar_url.blank?  %>
    <div class="col-sm-10 col-sm-offset-2 m-b">
      <%= image_tag @user.avatar_url('40'), class: "img-thumbnail" %>
    </div>
  <% end %>
  <%= f.collection_select(:role, User::ROLES, :to_s, lambda{|i| i.to_s.humanize}) %>

    <%= f.input :avatar, label: "头像" %>

    <%= f.input :password, label: "密码" %>
  <%= f.input :password_confirmation, label: "确认密码" %>
  
  <div class="line line-dashed b-b line-lg pull-in"></div>
  <div class="col-sm-10 col-sm-offset-2">
    <%= f.button :submit, "提 交", class: "btn btn-primary" %>
    <%= link_to "返 回", :back, class: "btn btn-default" %>
  </div>
<% end %>
